<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    android:padding="0dp"
    tools:context="com.example.mdasif.mycalculator.Calculator">

    <Button
        android:id="@+id/btnEql"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="96dp"
        android:layout_height="143dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/background_dark"
        android:onClick="onClickEqual"
        android:text="="
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="30sp"
        tools:text="=" />

    <Button
        android:id="@+id/btn0"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="96dp"
        android:layout_height="73dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn1"
        android:background="@android:color/background_dark"
        android:onClick="onClickNumber"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="30sp"
        tools:text="0" />

    <Button
        android:id="@+id/btnob"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="96dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btn0"
        android:layout_toRightOf="@+id/btn0"
        android:background="@android:color/background_dark"
        android:onClick="onClickOpenBracket"
        android:text="("
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="30sp"
        tools:text="(" />

    <Button
        android:id="@+id/btncb"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="96dp"
        android:layout_height="73dp"
        android:layout_below="@+id/btn3"
        android:layout_toEndOf="@+id/btn2"
        android:layout_toRightOf="@+id/btn2"
        android:background="@android:color/background_dark"
        android:onClick="onClickCloseBracket"
        android:text=")"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="30sp"
        tools:text=")" />

    <Button
        android:id="@+id/btn5"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="96dp"
        android:layout_height="73dp"
        android:layout_above="@+id/btn3"
        android:layout_toEndOf="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:background="@android:color/background_dark"
        android:onClick="onClickNumber"
        android:text="5"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="30sp"
        tools:text="5" />

    <Button
        android:id="@+id/btn2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="96dp"
        android:layout_height="73dp"
        android:layout_below="@+id/btn6"
        android:layout_toEndOf="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:background="@android:color/background_dark"
        android:onClick="onClickNumber"
        android:text="2"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="30sp"
        tools:text="2" />

    <Button
        android:id="@+id/btn3"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="96dp"
        android:layout_height="73dp"
        android:layout_alignLeft="@+id/btn6"
        android:layout_alignStart="@+id/btn6"
        android:layout_below="@+id/btnAdd"
        android:background="@android:color/background_dark"
        android:onClick="onClickNumber"
        android:text="3"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="30sp"
        tools:text="3" />

    <Button
        android:id="@+id/btnAdd"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="96dp"
        android:layout_height="73dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnSub"
        android:background="@android:color/background_dark"
        android:onClick="onClickOperator"
        android:text="+"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="30sp"
        tools:text="+" />

    <Button
        android:id="@+id/btn1"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="96dp"
        android:layout_height="73dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn4"
        android:background="@android:color/background_dark"
        android:onClick="onClickNumber"
        android:text="1"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="30sp"
        tools:text="1" />

    <Button
        android:id="@+id/btn6"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="96dp"
        android:layout_height="73dp"
        android:layout_below="@+id/btn8"
        android:layout_toLeftOf="@+id/btnAdd"
        android:layout_toStartOf="@+id/btnAdd"
        android:background="@android:color/background_dark"
        android:onClick="onClickNumber"
        android:text="6"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="30sp"
        tools:text="6" />

    <Button
        android:id="@+id/btn4"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="96dp"
        android:layout_height="73dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn7"
        android:background="@android:color/background_dark"
        android:onClick="onClickNumber"
        android:text="4"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="30sp"
        tools:text="4" />

    <Button
        android:id="@+id/btnSub"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="96dp"
        android:layout_height="73dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnMul"
        android:background="@android:color/background_dark"
        android:onClick="onClickOperator"
        android:text="-"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="30sp"
        tools:text="-" />

    <Button
        android:id="@+id/btn7"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="96dp"
        android:layout_height="73dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnClr"
        android:background="@android:color/background_dark"
        android:onClick="onClickNumber"
        android:text="7"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="30sp"
        tools:text="7" />

    <Button
        android:id="@+id/btn8"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="96dp"
        android:layout_height="73dp"
        android:layout_below="@+id/btnPersentage"
        android:layout_toEndOf="@+id/btn7"
        android:layout_toRightOf="@+id/btn7"
        android:background="@android:color/background_dark"
        android:onClick="onClickNumber"
        android:text="8"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="30sp"
        tools:text="8" />

    <Button
        android:id="@+id/btn9"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="96dp"
        android:layout_height="73dp"
        android:layout_below="@+id/btnMul"
        android:layout_toEndOf="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:background="@android:color/background_dark"
        android:onClick="onClickNumber"
        android:text="9"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="30sp"
        tools:text="9" />

    <Button
        android:id="@+id/btnMul"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="96dp"
        android:layout_height="73dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/btnDiv"
        android:layout_toRightOf="@+id/btnDiv"
        android:background="@android:color/background_dark"
        android:onClick="onClickOperator"
        android:text="*"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="30sp"
        tools:text="*" />

    <Button
        android:id="@+id/btnDiv"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="96dp"
        android:layout_height="73dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/btnPersentage"
        android:layout_toRightOf="@+id/btnPersentage"
        android:background="@android:color/background_dark"
        android:onClick="onClickOperator"
        android:text="/"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="30sp"
        tools:text="/" />

    <Button
        android:id="@+id/btnPersentage"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="96dp"
        android:layout_height="73dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/btnClr"
        android:layout_toRightOf="@+id/btnClr"
        android:background="@android:color/background_dark"
        android:onClick="onClickOperator"
        android:text="%"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="30sp"
        tools:text="%" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/background_light"
        android:gravity="bottom|right"
        android:text="0"
        android:textSize="50sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnClr"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="96dp"
        android:layout_height="73dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:background="@android:color/background_dark"
        android:onClick="onClickClear"
        android:text="C"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="30sp"
        tools:text="C" />

</RelativeLayout>
